<div class="ui grid">
  <div class="computer tablet only row">
    <div class="ui inverted fixed menu navbar page grid">
      <a href="" class="brand item brand_site">
        <%= image_tag "logo.png", :class => "site_logo" %>
      </a>
      <a class="item site_name"><%= Settings.site_name %></a>  
      <%= link_to "Home", root_path, :class => "item #{'active' if current_page?(root_path)}" %>
      <a href="/how_it_works" class="item">How it Works</a>
      <a href="/our_team" class="item">Our Team</a>
      <a href="/faq" class="item">FAQ</a>
      
      <div class="right menu">
        <% if user_signed_in? %>
        <div class="ui dropdown item"><%= current_user.username %>
          <i class="dropdown icon"></i>
          <div class="menu ui transition">
            
            <%= link_to "Log out", destroy_user_session_path, :class => "item" %>
            <%= link_to "Edit registration", edit_user_registration_path, :class => "item" %>

            <a class="ui divider"></a>
            <%= link_to "My Profile", student_profile_path, :class => "item" %>
          </div>
        </div>
        <% else %>
          <%= link_to raw("Sign Up"), new_user_registration_path, :class => "item" %>
          <%= link_to raw("Log In"), new_user_session_path, :class => "item" %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mobile only row">
    <div class="ui fixed inverted navbar menu">
      <a href="" class="brand item"><%= Settings.site_name %></a>
      <a class="launch item right">
        <i class="content icon"></i>
        Menu
      </a>
      
    </div>
  </div>
</div>